<script>
    document.addEventListener('DOMContentLoaded', async () => {
        const grid = document.getElementById('events-grid-container');
        
        try {
            // Fetch al endpoint de eventos (Asumimos que el backend lo tendr√°)
            const response = await fetch('/api/eventos');
            const eventos = await response.json();
            
            grid.innerHTML = ''; // Limpiar mensaje de carga

            if(eventos.length === 0) {
                grid.innerHTML = '<p style="text-align:center; width:100%; color:#999;">No hay eventos registrados recientemente.</p>';
                return;
            }

            // Invertir orden para mostrar los m√°s nuevos primero si no viene ordenado
            // eventos.reverse(); 

            eventos.forEach(ev => {
                // Procesar Imagen
                const imgs = (ev.imagen_url || "").split(',');
                let imgUrl = imgs[0] ? imgs[0].trim() : '/img/favicon.png';
                if(imgUrl && !imgUrl.startsWith('/') && !imgUrl.startsWith('http')) imgUrl = '/' + imgUrl;

                const card = document.createElement('div');
                card.className = 'event-card';
                card.innerHTML = `
                    <div class="event-img-wrapper">
                        <span class="event-date-badge">${ev.fecha_texto || 'Reciente'}</span>
                        <img src="${imgUrl}" alt="${ev.titulo}" onerror="this.src='/img/nosotros.png'">
                    </div>
                    <div class="event-content">
                        <h4>${ev.titulo}</h4>
                        <p>${ev.subtitulo || ''}</p>
                        <div class="event-location">
                            üìç ${ev.ubicacion || 'Ubicaci√≥n no especificada'}
                        </div>
                    </div>
                `;
                grid.appendChild(card);
            });

        } catch (error) {
            console.error("Error cargando eventos:", error);
            grid.innerHTML = '<p style="text-align:center; width:100%; color:red;">Hubo un error al cargar los eventos.</p>';
        }
    });
</script>

