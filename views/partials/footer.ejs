<script>
    // 1. Script para Copiar Email
    function copiarEmail() {
        const email = "info@labelec.com.ar";
        navigator.clipboard.writeText(email).then(() => {
            const tooltip = document.getElementById("email-tooltip");
            tooltip.innerText = "¡Copiado!";
            tooltip.style.backgroundColor = "#96C94D";
            setTimeout(() => {
                tooltip.innerText = "Click para copiar";
                tooltip.style.backgroundColor = "#333";
            }, 2000);
        }).catch(err => console.error('Error al copiar', err));
    }

    // 2. SCRIPT DE NAVEGACIÓN SUAVE INTELIGENTE
    document.addEventListener("DOMContentLoaded", function() {
        // Seleccionar todos los links que apuntan al index o anclas
        const links = document.querySelectorAll('a[href*="index.html"], a[href^="#"], a[href="/"]');

        links.forEach(link => {
            link.addEventListener("click", function(e) {
                // Detectar si estamos en la HOME actualmente
                const currentPath = window.location.pathname;
                const isHome = currentPath === "/" || currentPath === "/index.html";

                // Obtener hacia dónde va el link
                const targetUrl = new URL(this.href, window.location.origin);
                const targetPath = targetUrl.pathname;
                const targetHash = targetUrl.hash;

                // SI: Estamos en home Y el link va a home (o una sección de home)
                if (isHome && (targetPath === "/" || targetPath === "/index.html")) {
                    e.preventDefault(); // ¡ALTO! No recargues la página.

                    if (targetHash) {
                        // Caso A: Ir a una sección (ej: #contacto)
                        const targetElement = document.querySelector(targetHash);
                        if (targetElement) {
                            // Deslizar suavemente hacia el elemento
                            targetElement.scrollIntoView({ behavior: "smooth" });
                            // Actualizar URL sin recargar (opcional, para que quede bonito)
                            history.pushState(null, null, targetHash);
                        }
                    } else {
                        // Caso B: Ir a "Inicio" (sin hash) -> Subir arriba de todo
                        window.scrollTo({ top: 0, behavior: "smooth" });
                        history.pushState(null, null, "index.html");
                    }
                }
                // SI NO: Deja que el navegador actúe normal (cargará la otra página)
            });
        });
    });
</script>
